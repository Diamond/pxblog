<input type="hidden" id="post-id" value="<%= @post.id %>">
<h2>Show post</h2>

<ul>

  <li>
    <strong>Title:</strong>
    <%= @post.title %>
  </li>

  <li>
    <strong>Body:</strong>
    <%= markdown(@post.body) %>
  </li>

</ul>

<div class="comments">
  <h2>Comments</h2>
  <%= for comment <- @post.comments do %>
    <%= render Pxblog.CommentView,
      "comment.html",
      comment: comment,
      author_or_admin: @conn.assigns[:author_or_admin],
      conn: @conn
    %>
  <% end %>
</div>

<%= render Pxblog.CommentView,
  "form.html",
  changeset: @comment_changeset,
  action: post_comment_path(@conn, :create, @post),
  post: @post
%>

<%= link "Edit", to: user_post_path(@conn, :edit, @user, @post), class: "button warning" %>
&nbsp;
<%= link "Back", to: user_post_path(@conn, :index, @user), class: "button alert" %>
